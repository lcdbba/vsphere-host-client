<?xml version="1.0" encoding="UTF-8"?>

<plugin id="com.vmware.vsphere.client.modules.bootstrap" moduleUri="BootstrapModule.swf">

   <dependencies>
      <dependency type="module" uri="BootstrapUiSharedModule.swf"/>
   </dependencies>

   <resources>
      <resource locale="{locale}">
         <!-- relative path of the resource .swf generated by the build script -->
         <module uri="locales/bootstrap-ui-{locale}.swf"/>
      </resource>
   </resources>

   <extensionPoint id="vsphere.core.flow">
      <objectType class="com.vmware.vsphere.client.wizard.specs.FlowSpec"/>
   </extensionPoint>

   <extensionPoint id="vsphere.core.flowBasedWizard">
      <objectType class="com.vmware.vsphere.client.wizard.specs.FlowBasedWizardConfigSpec"/>
   </extensionPoint>

   <extensionPoint id="vsphere.core.flowBasedMultiPageDialog">
      <objectType class="com.vmware.vsphere.client.wizard.specs.FlowBasedMultiPageDialogConfigSpec"/>
   </extensionPoint>

   <!-- Dummy filter to force loading of argo-ui module -->
   <extension id="vsphere.core.modulesDummyFilter">
      <extendedPoint>vmware.extension.filters</extendedPoint>
      <object>
         <filterClass className="com.vmware.vsphere.client.modules.filters.DummyFilter"/>
         <returnsInstantly>true</returnsInstantly>
      </object>
   </extension>

   <!-- Filter for global privileges check without context objects-->
   <extension id="vsphere.core.globalPrivilegeFilter">
      <extendedPoint>vmware.extension.filters</extendedPoint>
      <object>
         <filterClass className="com.vmware.vsphere.client.filter.GlobalPrivilegeFilter"/>
         <filterProperties>
            <com.vmware.extensionfw.PropertyInfo>
               <!-- An array of global privilege IDs that need to be granted to a user to access this extension -->
               <name>globalPrivilege</name>
               <!-- Comma separated list of privilege IDs-->
               <type>String</type>
            </com.vmware.extensionfw.PropertyInfo>
         </filterProperties>
      </object>
      <metadata>
         <tags>global</tags>
      </metadata>
   </extension>

    <!-- Filter for capabilities checks.-->
   <extension id="vsphere.core.capabilityFilter">
      <extendedPoint>vmware.extension.filters</extendedPoint>
      <object>
         <filterClass className="com.vmware.vsphere.client.filter.capability.CapabilityFilter"/>
         <filterProperties>
            <com.vmware.extensionfw.PropertyInfo>
               <!-- An array of capability  IDs that need to be granted to a user to access this extension -->
               <name>capability</name>
               <!-- Comma separated list of privilege IDs-->
               <type>String</type>
            </com.vmware.extensionfw.PropertyInfo>
         </filterProperties>
      </object>
      <metadata>
         <tags>global</tags>
      </metadata>
   </extension>
</plugin>
